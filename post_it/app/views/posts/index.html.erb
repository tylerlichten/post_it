<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
  <div class="panel-heading"><h1><center>Welcome to Post_It. </br> Just Post_It.</center></h1></div>
</div>
</br>

 <div class="container">
    <% @posts.each do |post| %>
    <div class="col-md-4 box-">
        <center><%= link_to image_tag(post.image.url(:medium)), post %></br>
        <%= post.description %></br>
        <strong><%= post.user.name if post.user %></strong><br/>
        <% if post.user == current_user %>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></center></br>
        <% end %>
    </div>
    <% end %> 
</div>
      

<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>